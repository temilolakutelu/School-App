extends layout

block content

  h1 Department: #{department.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Students
    
    dl
    each student in department_students
     li 
        | #[strong Name] #{student.name}

        | #[strong level:] #{student.level.level}, 
        | #[strong department:]#{student.department.name}, 
        | #[strong faculty:] #{student.faculty.name} 

    else
      p This department has no students

      hr
  p
    a(href=department.url+'/delete') Delete department

      